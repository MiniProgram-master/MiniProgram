page{
  background: linear-gradient(to bottom,#0E7EE6,rgb(137,197,251));
}

.image-wrapper{
  width: 100%;
  text-align: center;
  margin-top:40px;
}

.image-wrapper image{
  width: 100px;
  height: 100px;
  border-radius: 60px;
  margin: auto;
  box-shadow: 0px 0px 5px #BBB;
}

.card{
  width: 85%;
  margin-left: auto;
  margin-right: auto;
  margin-top: -60px;
  border-radius: 15px;
  padding-top:20px;
  background: white;
  display:flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0px 0px 5px #BBB;

}

.avatar-card{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:50px;
}

.avatar-card image{
  width: 120px;
  height: 120px;
  border-radius: 60px;
}

.account-detail{
  width: 90%;
  margin-top:20px;
  margin-bottom:20px;
  display:flex;
  flex-direction: column;
  align-items: center;
  overflow-x: hidden;
}

.account-name-wrapper{
  display: flex;
  justify-content: center;
  align-items: center;
}

.account-name{
  font-size: 35rpx;
  font-weight: bold;
}

.account-name-wrapper .fa{
  font-size: 35rpx;
  margin-left:10rpx;
}

.account-location-wrapper{
  margin-top:5px;
  display: flex;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
  max-width: 100%;
  overflow: auto;
}

.account-location-wrapper view {
  font-size: 30rpx;
  color:grey;
  white-space: nowrap;
}

.account-location-wrapper .fa{
  margin-right: 10rpx;
  color:grey;
}





.info-wrapper{
  width: 100%;
  margin-top: 20px;
  margin-bottom: 60px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.info-cell{
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.info-content{
  color:#0E7EE6;
  font-size: 44rpx;
  font-weight: bolder;
  margin-bottom: 5px;
  white-space: nowrap;
  max-width: 80%;
  overflow: auto;
}

.info-label{
  color:grey;
  font-size: small;
  font-weight: lighter;
}

.info-location{
  font-size: 39rpx;
}

.friends_showPeople-footer{
  width: 100%;
}

