/* pages/buyTitleHistory/buyTitleHistory.wxss */
page{
  padding-bottom: 15px;
}

.no_record_wrapper{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no_record_wrapper image{
  width: 100px;
  height:100px;
  margin-top: 150px;
}

.no_record_word{
  font-size: 33rpx;
  color: #bfbfbf;
  margin-top: 20px;
}

.card{
  width: 85%;
  height: 160px;
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 5px #bfbfbf;
  margin: auto;
  margin-top: 15px;
  border-radius: 8px;
}

.upper-card{
  width: 100%;
  height: 90px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
}

.upper-card image{
  width: 60px;
  height: 60px;
  border-radius: 40px;
  border: 3px solid white;
  margin-left: 30px;
}

.upper-detail-wrapper{
  height: 90%;
  margin-right: 20px;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.detail-price-wrapper{
  margin-top: 15px;
  display: flex;
  align-items: center;
}

.detail-price-wrapper .fa{
  font-size: 37rpx;
  color: white;
  margin-right: 5px;
}

.detail-price{
  font-size: 40rpx;
  font-weight: bold;
  color: white;
}

.detail-date{
  font-size: 30rpx;
  font-weight: lighter;
  color: white;
}

.wave-border{
  width: 100%;
  height: 10px;
  margin-left: auto;
  margin-right: auto;
  margin-top: -5px;
  border-bottom: none;
  background: radial-gradient(circle at 50% 50%, #fff 0, #fff 50%, transparent 0);
  background-repeat: repeat-x;
  background-size: 10px 10px;
  background-position: 10px 5px;
}

.down-card{
  width: 100%;
  height: 65px;
  background: white;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.down-detail-wrapper{
  margin-left: 30px;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.before-name-wrapper{
  display: flex;
  align-items: center;
}

.before-name-wrapper .fa{
  font-size: 25rpx;
  color: inherit;
  margin-right: 3px;
}

.before-name{
  font-size: 27rpx;
  color: inherit;
}

.new-name-wrapper{
  display: flex;
  align-items: center;
}


.new-name-wrapper .fa{
  font-size: 25rpx;
  color: inherit;
  margin-right: 3px;
}

.new-name{
  font-size: 27rpx;
  color: inherit;
}


.valid-wrapper{
  height: 100%;
  margin-right: 20px;
  display: flex;
  flex-direction: column;
}

.valid{
  width: 20px;
  height: 20px;
  background-color: #0E7EE6;
  margin-top: 15px;
  border-radius: 3px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.valid .fa{
  font-size:13px;
  color: white;

}




